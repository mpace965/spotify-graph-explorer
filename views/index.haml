%html{ style: 'height: 100%' }
  %head
    %title Spotify Graph Explorer
    %link{ rel: 'stylesheet', href: 'https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css' }
    %link{ rel: "stylesheet", href: "https://maxcdn.bootstrapcdn.com/bootswatch/3.3.7/paper/bootstrap.min.css" }
  %body{ style: 'height: 100%' }
    - if session[:spotify_user]
      #app{ style: 'height: 100%; overflow: hidden', reactprops: { auth: true }.to_json }
    - else
      #app{ style: 'height: 100%; overflow: hidden', reactprops: { auth: false }.to_json }

    %script{ type: 'text/javascript', src: 'bundle.js' }
